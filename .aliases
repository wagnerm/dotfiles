#!/bin/bash

alias ll="ls -lah"
alias dir="ls -lah"
alias vi=vim

# rails
alias sander='rails console --sandbox'

# git
alias gp='git push origin `git head`'

# hub
if [ -f /usr/local/bin/hub ]; then
  alias git='hub'
  alias git-pr='hub pull-request --edit'
fi

alias rem="~/.cargo/bin/rem-cli"

alias gsup='git branch --set-upstream-to=origin/`git head` `git head`'

alias cat='bat --theme Nord -n'
#alias cat='bat --theme GitHub -n'

alias inflate="ruby -r zlib -e \"STDOUT.write Zlib::Inflate.inflate(STDIN.read)\""

function watch() {
    while true; do
		$@; sleep 1
	done
}
alias watch=watch $@

alias k="kubectl"

alias ca="code --add ."
alias cad="code --add"
